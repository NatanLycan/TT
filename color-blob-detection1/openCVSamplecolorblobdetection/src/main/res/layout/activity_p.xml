<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.opencv.samples.colorblobdetect.P"
    android:id="@+id/activity_P">



    <ImageView
        android:id="@+id/test_image"
        android:layout_width="384dp"
        android:layout_height="396dp"
        android:src="@color/background_floating_material_light"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.684"
        tools:layout_editor_absoluteY="-2dp" />

    <Button
        android:id="@+id/botonAbrirImagen"
        android:onClick="actionBotonAbrirImagen"
        android:text="Abrir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/test_image" />

    <Button
        android:id="@+id/botonConfirmar"
        android:onClick="actionBotonConfirmar"
        android:text="Confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/test_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/view_final"
        android:layout_width="197dp"
        android:layout_height="197dp"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha"
        app:layout_constraintTop_toBottomOf="@+id/botonAbrirImagen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="104dp" />


</android.support.constraint.ConstraintLayout>
